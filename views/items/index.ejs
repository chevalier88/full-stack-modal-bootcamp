<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link href="styles.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <h4>Items:</h4>
    <% items.forEach( item => { %>
    <div>
      <p>
        <%= item.id %> : <%= item.name %>;
        <br />
        <button class="open" id = "btn-<%= item.id %>"> Show/Hide Description </button>
        <div class = "hide" id = "div-<%= item.id %>">
          <div class="modal">
            description: <%= item.description %>
            <button class="close" id ='close-<%= item.id %>'>close</button>
          </div>
        </div>
      </p>
    </div>
    <% }) %>
  </body>
<script src="script.js"></script>
</html>
